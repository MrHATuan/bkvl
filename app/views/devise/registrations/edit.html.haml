.registration-bg
    .container
        .row
            .col-md-4.col-md-offset-4
                .log-in.panel
                    .panel-heading
                        %h2 Edit
                    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                        = f.error_notification
                        .panel-body
                            = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'form-control' }
                            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                                %p Currently waiting confirmation for: = resource.unconfirmed_email
                            = f.input :user_name, required: true, label: false, placeholder: 'User Name', input_html: { class: 'form-control' }
                            = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false, placeholder: 'Password', input_html: { class: 'form-control' }
                            = f.input :password_confirmation, required: false, label: false, placeholder: 'Confirm Password', input_html: { class: 'form-control' }
                            = f.button :submit, "Update", class: 'btn-lg btn-info btn-block'
                .text-center.edit-links            
                    = link_to 'Back', :back