<div >
		
		<div class="post-wrapper">
			<%= @posts.each do |post| %>
			<div class="post">
				<div class="post-head">
					<span class="name"><%=post.user.user_name%></span>
				</div>

			<div class="image center-block">
				<%= link_to (image_tag post.image.url(:medium),class:'img-responsive'), post_path(post) %>
			</div>
			<p class="caption"><%= post.caption %></p>
			</div>
			<% end %>
		</div>

</div>
	



